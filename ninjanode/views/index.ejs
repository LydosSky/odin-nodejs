<!doctype html>
<html lang="en">
    <%- include('./partials/head.ejs') %>
    <body>
        <%- include('./partials/nav.ejs') %>

        <div class="blogs content">
            <% if(blogs.length > 0) { %>
                <% blogs.forEach(blog => {%>
                    <h3 class='title'><%= blog.title %></h3>
                    <p class='snippet'> <%= blog.snippet %></p>
                <% }) %>
            <% } else { %>
                <p>No Blog Posts</p>
            <% } %>
        </div>
        <%- include('./partials/footer.ejs') %>
    </body>
</html>
